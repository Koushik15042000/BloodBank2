<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LastDate"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="539dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/last"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-20dp">
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:hint="Last Blood Donation Date"
                        android:id="@+id/lastDate"
                        android:inputType="text"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="serif"
                        android:textColor="#000000"
                        android:paddingLeft="10dp"
                        android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/imageViewup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_date_range_black_36dp"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border_solid"
        android:gravity="center"
        android:text="save"
        android:textColor="#fff" />

</LinearLayout>